{
	"name" : "ActionScript 3.0",
	"scopeName" : "source.actionscript.3",
	"fileTypes" : ["as"],
	"patterns" : [
		{
        	"name" : "meta.package.actionscript.3",
        	"begin" : "\\s*(package)\\s*\\b[\\w\\.]*",
            "beginCaptures" : {
                "1" : {
                    "name" : "storage.type.actionscript.3"
                }
            },
        	"end" : "}",
            "patterns" : [
                {
                	"name" : "meta.class.actionscript.3",
                	"begin" : "\\s*[\\w]*\\s*\\b(class)\\s+\\w+",
                    "beginCaptures" : {
                        "1" : {
                            "name" : "storage.type.actionscript.3"
                        }
                    },
                    "end" : "}"
                }
            ]
        }
	]
}